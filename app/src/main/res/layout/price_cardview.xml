            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/store_image"
                    android:src="@drawable/smart"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:maxWidth="200dp"
                    android:maxHeight="50dp" />

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Tushar"
                    android:lines="1"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <RatingBar
                    android:id="@+id/ratingBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentRight="true"
                    android:numStars="5"/>

                <TextView
                    android:id="@+id/delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delivery time"
                    android:layout_below="@id/store_image"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/delivery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delivery charges"
                    android:layout_below="@id/delivery_time"
                    android:textSize="8sp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textStyle="bold"
                    android:text="Tushar"
                    android:textSize="20sp"
                    android:layout_below="@id/delivery_charge"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/product_buy"
                    android:layout_marginRight="30dp"/>

                <TextView
                    android:id="@+id/product_Stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

               <Button
                   android:id="@id/product_buy"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="BUY"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_alignParentBottom="false"
                   android:background="@color/accent_material_light"
                   android:layout_below="@id/delivery_charge"/>
            </RelativeLayout>
        <!--</LinearLayout>-->
